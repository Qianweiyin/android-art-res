<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:onClick="onClickView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义 View 1-1 绘制基础" />

    <Button
        android:onClick="onClickView02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义 View 1-2 Paint 详解" />

    <Button
        android:onClick="onClickView03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="自定义 View 1-3 drawText() 文字的绘制" />


    <Button
        android:onClick="onClickView04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="自定义 View 1-4 Canvas 对绘制的辅助 clipXXX() 和 Matrix" />
</LinearLayout>